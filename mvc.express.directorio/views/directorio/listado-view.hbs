<div class="card-body p-0">
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th style="width: 1%">
                    √Årea
                </th>
                <th style="width: 20%">
                    Nombre completo
                </th>
                <th style="width: 30%">
                    Cargo
                </th>
                <th>
                    Correo
                </th>
                <th style="width: 8%" class="text-center">
                    Accion
                </th>
                <th style="width: 20%">
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each personal}}
            <tr>
                <td>
                    {{Area}}
                </td>
                <td>{{Titulo}} {{ NombreCompleto }}
                </td>
                <td>
                    {{ Cargo }}
                </td>
                <td class="project_progress">
                    {{ Correo }}
                </td>
                <td class="project-state">
                    <span class="badge badge-success">Success</span>
                </td>
                <td class="project-actions text-right">
                    <a class="btn btn-primary btn-sm"   href="/directorio/view/{{id}}">
                        <i class="fas fa-folder">
                        </i>
                    </a>
                    <a class="btn btn-info btn-sm"      href="/directorio/edit/{{id}}">
                        <i class="fas fa-pencil-alt">
                        </i>
                    </a>
                    <a class="btn btn-danger btn-sm"    href="/directorio/delete/{{id}}">
                        <i class="fas fa-trash">
                        </i>
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>